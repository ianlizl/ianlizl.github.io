---
interface Props {
  title: string;
  publication: string;
  authors: string;
  pdfUrl?: string;
  doi?: string;
}

const { title, publication, authors, pdfUrl, doi } = Astro.props;
---

<div class="card">
  <div class="w-full flex justify-between items-start mb-2">
    <div>
      <p class="text-gray-300 italic text-sm">{publication}</p>
      {
        doi ? (
          <a class="hover:underline" href={doi} rel="noreferrer noopener" target="_blank">
            <h3>{title}</h3>
          </a>
        ) : (
          <h3>{title}</h3>
        )
      }
    </div>
    {
      pdfUrl && (
        <a class="btn text-xs" href={`/research/${pdfUrl}`}>
          PDF
        </a>
      )
    }
  </div>
  <p>
    {authors}
  </p>
</div>
